<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- properties -->
        
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/webui?zeroDateTimeBehavior=convertToNull</property>
        <property name="hibernate.connection.username">xaadmin</property>
        <property name="hibernate.connection.password">password</property>
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- mappings -->

        <mapping class="com.xa.webui.persistence.domain.user.User"/>
        <mapping class="com.xa.webui.persistence.domain.user.UserSession"/>

        <mapping class="com.xa.webui.persistence.domain.component.Menu"/>
        <mapping class="com.xa.webui.persistence.domain.component.MenuItem"/>
        <mapping class="com.xa.webui.persistence.domain.component.FooterMenu"/>
        <mapping class="com.xa.webui.persistence.domain.component.FooterMenuItem"/>
        <mapping class="com.xa.webui.persistence.domain.component.OptionItemGroup"/>
        <mapping class="com.xa.webui.persistence.domain.component.OptionItem"/>

        <mapping class="com.xa.webui.persistence.domain.component.page.PageSingleDescriptor"/>
        <mapping class="com.xa.webui.persistence.domain.component.page.PageGroupDescriptor"/>

        <mapping class="com.xa.webui.persistence.domain.resource.WebResource"/>
        <mapping class="com.xa.webui.persistence.domain.resource.path.PathResource"/>
        <mapping class="com.xa.webui.persistence.domain.resource.resolution.ResolutionResource"/>
        <mapping class="com.xa.webui.persistence.domain.resource.resolution.ResolutionDescriptor"/>

        <mapping class="com.xa.webui.persistence.domain.workflow.Workflow"/>
        <mapping class="com.xa.webui.persistence.domain.workflow.WorkflowRule"/>

        <mapping class="com.xa.webui.persistence.domain.resource.skin.Skin"/>
        <mapping class="com.xa.webui.persistence.domain.resource.skin.SkinProperty"/>

        <!-- events -->

        <event type="save-update"><listener class="com.xa.webui.persistence.hibernate.SaveOrUpdateVersionedEntityListener"/></event>
        
    </session-factory>
</hibernate-configuration>
